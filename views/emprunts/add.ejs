<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <title>Ajouter un Emprunt</title>
    <link rel="stylesheet" href="/css/emprunt.css">
</head>
<body>
    
    <header>
        <h1>Ajouter un Emprunt</h1>
        <a href="/admin/loans" class="btn btn-back">Retour</a>
    </header>
    <main>
        <form action="/admin/emprunts/Ajouter" method="POST">
            <label for="user_id">Utilisateur</label>
            <select name="user_id" id="user_id" required>
                <% users.forEach(user => { %>
                    <option value="<%= user.id %>"><%= user.nom %></option>
                <% }) %>
            </select>

            <label for="exemplaire_id">Exemplaire</label>
            <select name="exemplaire_id" id="exemplaire_id" required>
                <% exemplaires.forEach(exemplaire => { %>
                    <option value="<%= exemplaire.id %>">
                        Exemplaire <%= exemplaire.numero_ordre %> du document "<%= exemplaire.titre %>"
                    </option>
                <% }) %>
            </select>

            <button type="submit" class="btn btn-submit">Ajouter</button>
        </form>
    </main>
</body>
</html>
