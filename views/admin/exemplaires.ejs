<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <title>Emprunts</title>
    <style>

:root {
    --primary-color: #2c3e50;
    --secondary-color: #34495e;
    --accent-color: #1abc9c;
    --danger-color: #e74c3c;
    --warning-color: #f1c40f;
    --success-color: #2ecc71;
    --text-light: #ecf0f1;
    --text-dark: #2c3e50;
    --background-light: #f4f4f9;
    --card-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
}


body {
    font-family: 'Segoe UI', Arial, sans-serif;
    background-color: var(--background-light);
    color: var(--text-dark);
    margin: 0;
    padding: 20px;
    min-height: 100vh;
}


header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    padding: 20px;
    background-color: white;
    border-radius: 12px;
    box-shadow: var(--card-shadow);
}

header h1 {
    color: var(--primary-color);
    margin: 0;
    font-size: 1.8rem;
    font-weight: 600;
}


.btn-primary {
    background-color: var(--accent-color);
    border: none;
    padding: 12px 24px;
    border-radius: 8px;
    transition: all 0.3s ease;
    font-weight: 500;
}

.btn-primary:hover {
    background-color: #159b84;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(26, 188, 156, 0.2);
}


main {
    background-color: white;
    border-radius: 12px;
    box-shadow: var(--card-shadow);
    padding: 25px;
    overflow-x: auto;
}


.emprunt-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    margin-top: 10px;
}

.emprunt-table thead {
    background-color: var(--background-light);
}

.emprunt-table th {
    padding: 16px;
    text-align: left;
    font-weight: 600;
    color: var(--primary-color);
    border-bottom: 2px solid var(--accent-color);
    white-space: nowrap;
}

.emprunt-table td {
    padding: 16px;
    border-bottom: 1px solid #eee;
    vertical-align: middle;
}

.emprunt-table tbody tr {
    transition: all 0.3s ease;
}

.emprunt-table tbody tr:hover {
    background-color: rgba(26, 188, 156, 0.05);
}


.emprunt-table td:nth-child(4),
.emprunt-table td:nth-child(5),
.emprunt-table td:nth-child(8) {
    font-weight: 500;
}


td:nth-child(8) {
    text-transform: capitalize;
}


.btn-success {
    background-color: var(--success-color);
    border: none;
    padding: 8px 16px;
    border-radius: 6px;
    transition: all 0.3s ease;
    font-size: 0.9rem;
}

.btn-success:hover {
    background-color: #27ae60;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(46, 204, 113, 0.2);
}


td:nth-child(6),
td:nth-child(7) {
    white-space: nowrap;
}


@media (max-width: 1200px) {
    main {
        padding: 15px;
    }

    .emprunt-table {
        font-size: 0.9rem;
    }

    header {
        flex-direction: column;
        gap: 15px;
        text-align: center;
    }
}

@media (max-width: 768px) {
    body {
        padding: 10px;
    }

    header h1 {
        font-size: 1.5rem;
    }

    .emprunt-table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
    }

    .emprunt-table th,
    .emprunt-table td {
        padding: 12px;
    }
}


@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.emprunt-table tbody tr {
    animation: fadeIn 0.5s ease forwards;
}


td[data-status="en cours"] {
    color: var(--warning-color);
}

td[data-status="retourné"] {
    color: var(--success-color);
}

td[data-status="en retard"] {
    color: var(--danger-color);
}


.emprunt-table td:nth-child(3) {
    max-width: 200px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}


.btn:focus {
    outline: 3px solid rgba(26, 188, 156, 0.5);
    outline-offset: 2px;
}

.emprunt-table th:first-child {
    border-top-left-radius: 8px;
}

.emprunt-table th:last-child {
    border-top-right-radius: 8px;
}

.filter-section {
    background-color: white;
    padding: 20px;
    border-radius: 12px;
    box-shadow: var(--card-shadow);
    margin-bottom: 30px;
}

.filter-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 20px;
}

.filter-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.filter-item label {
    font-weight: 500;
    color: var(--text-dark);
}

.filter-item input,
.filter-item select {
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 8px;
    outline: none;
    font-size: 0.95rem;
    transition: border-color 0.3s ease;
}

.filter-item input:focus,
.filter-item select:focus {
    border-color: var(--accent-color);
}
    </style>
</head>
<body>

    <main>
        <table class="emprunt-table">
            <a href="/admin" class="btn btn-primary">Retour</a>
            <form action="/admin/exemplaires/search" method="GET">
                <section class="filter-section">
                    <div class="filter-grid">
                        <div class="filter-item">
                            <label>Type</label>
                            <select name="etat">
                                <option value="tout">Tous les etats</option>
                                <% etats.forEach(etat=>{ %>
                                    <option value="<%=etat.etat  %>"><%= etat.etat  %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    <div class="action-buttons">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i>
                            Rechercher
                        </button>
                        <button class="btn btn-secondary">
                            <i class="fas fa-redo"></i>
                            Réinitialiser
                        </button>
                    </div>
                </section>
            </form>

            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Editeur</th>
                    <th>Numero d'ordre</th>
                    <th>Date d'achat</th>
                    <th>État Exemplaire</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% exemplaires.forEach(exemplaire => { %>
                    <tr>
                        <td><%= exemplaire.titre %></td>
                        <td><%= exemplaire.editeur %></td>
                        <td><%= exemplaire.numero_ordre %></td>
                        <td><%= exemplaire.date_achat %></td>
                        <td><%= exemplaire.etat %></td>
                        <% if (exemplaire.etat ==='endommagé') {%>
                            <td>
                                <form action="/admin/exemplaires/reparer/<%= exemplaire.numero_ordre %>" method="POST" style="display:inline;">
                                    <button class="btn btn-success" type="submit">Réparer</button>
                                </form>
                            </td>
                        <% } %>
                        
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>
</body>
</html>
